{
    "title": "Tomba Email Finder Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "tombaApiKey": {
            "title": "Tomba API Key",
            "type": "string",
            "description": "Your Tomba API key (starts with 'ta_'). Get it from https://app.tomba.io/api",
            "editor": "textfield",
            "isSecret": true,
            "example": "ta_xxxxxxxxxxxxxxxxxxxx",
            "prefill": "ta_xxxxxxxxxxxxxxxxxxxx"
        },
        "tombaApiSecret": {
            "title": "Tomba API Secret",
            "type": "string",
            "description": "Your Tomba API secret (starts with 'ts_'). Get it from https://app.tomba.io/api",
            "editor": "textfield",
            "isSecret": true,
            "example": "ts_xxxxxxxxxxxxxxxxxxxx",
            "prefill": "ts_xxxxxxxxxxxxxxxxxxxx"
        },
        "requests": {
            "title": "Email Finder Requests",
            "type": "array",
            "editor": "json",
            "description": "List of requests to find email addresses using domain, first name, and last name",
            "items": {
                "type": "object",
                "properties": {
                    "domain": {
                        "type": "string",
                        "title": "Domain",
                        "description": "Company domain name (e.g., 'stripe.com')"
                    },
                    "firstName": {
                        "type": "string",
                        "title": "First Name",
                        "description": "Person's first name"
                    },
                    "lastName": {
                        "type": "string",
                        "title": "Last Name",
                        "description": "Person's last name"
                    }
                },
                "required": ["domain", "firstName", "lastName"],
                "additionalProperties": false
            },
            "minItems": 1,
            "maxItems": 1000,
            "example": [
                {
                    "domain": "stripe.com",
                    "firstName": "John",
                    "lastName": "Doe"
                },
                {
                    "domain": "example.com",
                    "firstName": "Jane",
                    "lastName": "Smith"
                }
            ],
            "prefill": [
                {
                    "domain": "stripe.com",
                    "firstName": "John",
                    "lastName": "Doe"
                }
            ]
        },
        "maxResults": {
            "title": "Maximum Results",
            "type": "integer",
            "description": "Maximum number of requests to process (default: 50, max: 1000)",
            "editor": "number",
            "default": 50,
            "minimum": 1,
            "maximum": 1000,
            "example": 50
        }
    },
    "required": ["tombaApiKey", "tombaApiSecret", "requests"]
}
